---
import Layout from '@/layouts/Layout.astro';

// Components
import Hero from '@/components/Hero.astro';
import HowWorks from '@/components/HowWorks.astro';
import Benefits from '@/components/Benefits.astro';
import Steps from '@/components/Steps.astro';
import About from '@/components/About.astro';
import Mentor from '@/components/Mentor.astro';
import Testimonials from '@/components/Testimonials.astro';
import FAQ from '@/components/FAQ.astro';
import FinalCTA from '@/components/FinalCTA.astro';
import Footer from '@/components/Footer.astro';

// Third-party components
import { SkipLink } from 'accessible-astro-components'

---

<Layout title="Método Alma Feminina" description="Bruno Pulis - Engenheiro de Software, desenvolvedor front-end e back-end, especialista em JavaScript, TypeScript, React, Node.js e muito mais.">
  <header>
    <SkipLink text="Ir para conteúdo principal" target="main-content" />
  </header>
  <Hero />
  <main id="main-content">
    <HowWorks />
    <Benefits />
    <Steps />
    <Mentor />
    <Testimonials />
    <FAQ />
    <FinalCTA />
  </main>
  <Footer />
</Layout>
