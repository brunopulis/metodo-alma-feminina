---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = false, class } = Astro.props;

---

<div class="mb-12 text-center">
  <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-gray-800">{title}</h2>
  {subtitle && (
    <p class="text-lg text-gray-600 max-w-3xl mx-auto">{subtitle}</p>
  )}
</div>
