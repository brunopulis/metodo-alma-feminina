---
import config from "@/data/site-config.json";

import Heading from "@/components/ui/Heading.astro";
import Button from "@/components/ui/Button.astro";
import { YouTube } from "astro-embed";
---

<section class="py-16 bg-[#fff4f2]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-col items-center">
      <!-- Left Column -->
        <span class="inline-block bg-accent-800 text-white text-sm font-semibold px-3 py-1 rounded mb-4">
          Método Alma Feminina
        </span>
        <h1 class="text-5xl text-accent-500 font-bold tracking-tight mb-6">
          Cure suas feridas e assuma suas emoções
        </h1>
        <div class="space-y-2 text-center animate-fade-in-down delay-100">
          <p class="text-[20px] text-gray-700">
            Liberte-se das cadeias emocionais e desperte seu verdadeiro propósito
          </p>
          <p class="text-[20px] text-gray-700">
            Pronta para uma transformação profunda e significativa?
          </p>
        </div>
    </div>

    <div class="max-w-7xl mx-auto mt-5 px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center items-center">
        <div class="aspect-video mb-5 w-full max-w-3xl">
          <YouTube
            class="w-full h-full rounded-lg shadow-lg"
            id={config.youtube}
            style="background-image: url('https://i.ytimg.com/vi/0ERVq1G8H6g/hqdefault.jpg');"
          />
          <noscript>
            <iframe
              width="560"
              height="315"
              title="Play"
              allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              src="https://www.youtube-nocookie.com/embed/0ERVq1G8H6g?autoplay=1&playsinline=1"
            ></iframe>
          </noscript>
          <div class="mt-6 mx-auto flex justify-center items-center">
            <Button
              href={config.checkout.url}
              label="Começar minha jornada"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  $color: #c58fa6;
  // d-inline-flex mb-3 px-2 py-1 fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2
  .tag {
    display: inline-flex;
    background: $color;
    border-radius: 0.375rem;
    padding: 4px 8px;
    font-weight: bold;
    color: #fff;
    margin-bottom: 1rem;
  }

  .hero {
    background: #fff4f2;
  }
</style>